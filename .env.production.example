# BingoMaster Production Environment Variables
# Copy this file to .env.production and update with your values

# Application Environment
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://bingomaster_user:your_secure_password@localhost:5432/bingomaster

# Session Security
SESSION_SECRET=your_very_secure_random_string_here_64_chars_minimum

# Domain Configuration
CORS_ORIGIN=https://yourdomain.com
COOKIE_DOMAIN=yourdomain.com

# Security Settings
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict
TRUST_PROXY=true

# Optional: Email Configuration (for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Optional: File Upload Configuration
# UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
# UPLOAD_DIR=/var/www/bingomaster/uploads

# Optional: Redis Configuration (for session store)
# REDIS_URL=redis://localhost:6379

# Optional: Monitoring
# LOG_LEVEL=info
# ENABLE_METRICS=true